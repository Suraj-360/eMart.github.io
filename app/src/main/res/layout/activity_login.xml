<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#091a2f"
    android:gravity="center_vertical"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/quizzerLogoLogin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:text="eMart Shopping"
            android:textColor="@color/white"
            android:textSize="35dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="#091a2f"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#091a2f"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Account Login"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center_horizontal"/>
            <View
                android:layout_width="225dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:background="@color/blue"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:paddingEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:hint="Email"/>
            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:text="forgot password"/>

            <View
                android:layout_width="107dp"
                android:layout_height="1.8dp"
                android:layout_marginTop="-2dp"
                android:layout_gravity="end"
                android:background="#959393"/>

            <TextView
                android:id="@+id/loginBtnMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Login Account"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/edit_text_bg_signup"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/createANewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Create new account"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>