<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.suraj.emart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMart"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EMart.Actionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CategoryActivity"
            android:exported="false"
            android:label="Products"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.OrderHisDet"
            android:exported="false"
            android:label="Order Review"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false"
            android:label="User account create"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="Login account"
            android:theme="@style/Theme.EMart.Actionbar"/>
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.CheckoutActivity"
            android:exported="false"
            android:label="Checkout Order"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.CartActivity"
            android:exported="false"
            android:label="Shopping Cart"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.EMart.Actionbar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>